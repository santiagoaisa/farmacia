<%@ taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c" %>

.z-intbox { 
    font-size:11px;
    font-weight: bold;    
    border-style: solid;
    border-width: 1px;    
    border-color: #b3b3b3;    
}

.z-intbox[readonly] { 
    font-size:11px;
    font-weight: bold;    
    border-style: solid;
    border-width: 1px;    
    border-color: #b3b3b3;    
}


.z-intbox:focus { 
    border-style: solid;
    border-width: 1px;
    border-color: #000000;        
}

.z-intbox {
    text-align:right;
}
