<%@ taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c" %>

.z-decimalbox { 
    font-size:11px;
    border-style: solid;
    border-width: 1px;    
    border-color: #b3b3b3;    
}

.z-decimalbox[readonly] { 
    font-size:11px;
    border-style: solid;
    border-width: 1px;    
    border-color: #b3b3b3;    
}
.z-decimalbox:focus { 
    border-style: solid;
    border-width: 1px;
    border-color: #000000;        
}

.z-decimalbox {
    text-align:right;
    font-weight: bold;
}

