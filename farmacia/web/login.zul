<?xml version="1.0" encoding="UTF-8"?>

<zk xmlns="http://www.zkoss.org/2005/zul">

    <window id="login" width="360px" title="Sistema Farmacia [Zarcillo Soluciones]"
            apply="modseguridad.Login" mode="overlapped" border="0" position="center">

        <grid >
                <columns>
                    <column width="65%"/>
                    <column width="35%"/>
                </columns>
                <rows  >
                    <row >
                        <image  height="70px" />
                        <image src="/img/Vidfarma.png" height="70px"/>
                    </row>
                </rows>
        </grid>
        
        <groupbox >
            <caption>Inicio de Sesi√≥n...</caption>
            
            <grid style="border-style:none;">
                <columns>
                    <column width="30%"/>
                    <column width="70%"/>
                </columns>
                <rows  >
                    <row style="border-style:none;">
                        <label value="Usuario" style="font-size:13px;"/>
                        <textbox id="txtUsuario" style="font-size:13px;" width="95%" />
                    </row>

                    <row style="border-style:none;">
                        <label value="Password:" style="font-size:13px;"/>
                        <textbox id="txtClave"  type="password"  style="font-size:13px;" width="95%" />
                    </row>

                    <row style="border-style:none;">                        
                        <button id="btnLogin" label="Login" />
                        <button id="btnBorrar" label="Borrar" />
                    </row>
                    
                     
                </rows>
            </grid>
                       

        </groupbox>
    </window>
    
</zk>
